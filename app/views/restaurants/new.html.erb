<h1>new restaurant</h1>

<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>

<p><%= link_to "back to all restaurants", restaurants_path %></p>
